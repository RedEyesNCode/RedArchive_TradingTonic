<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.login.ForgotPasswordActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/background_edit_text"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_8sdp"

        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_35sdp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:contentDescription="TODO">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:padding="@dimen/_8sdp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:gravity="center">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="We will send you a link on your email to \n reset your password"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"

            style="@style/EditTextTheme"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextOutLineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/pink"
                android:padding="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                app:errorTextColor="@color/red"
                app:errorEnabled="true"
                app:boxCornerRadiusTopStart="@dimen/_4sdp"
                app:boxStrokeColor="@color/pink"
                app:hintTextColor="@color/black">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/edtEmail"
                    android:background="@null"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Enter Your Email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_black"
                    android:textSize="@dimen/_12ssp"   />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendLink"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/background_button_login"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="@dimen/_40sdp"
            android:hint="Send Reset Password Link"
            android:textColorHint="@color/white"
            android:textAllCaps="true"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

</RelativeLayout>