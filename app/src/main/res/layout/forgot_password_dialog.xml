<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_theme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Forgot Password ?"
            android:gravity="center_horizontal"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/tvSetText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Enter the email addressbelow to \n receive a password reset link"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:orientation="vertical"
            android:background="@color/white">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextOutLineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/pink"
                android:padding="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_12sdp"
                app:boxCornerRadiusBottomStart="@dimen/_12sdp"
                app:boxCornerRadiusTopEnd="@dimen/_12sdp"
                app:boxCornerRadiusTopStart="@dimen/_12sdp"
                app:boxStrokeColor="#A30000"
                app:hintTextColor="@color/black">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@null"
                    android:id="@+id/edtEmail"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Enter Your Email Address"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_12ssp"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/btnSendLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/background_button_login"
                android:fontFamily="@font/lato_regular"
                android:paddingVertical="@dimen/_4sdp"
                android:paddingHorizontal="@dimen/_25sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="Send Reset Password Link"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>