<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".home.bankNiftyTrade.FragmentBankNiftyTrade">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/cardOptions"
                app:cardMaxElevation="@dimen/_12sdp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/tradeNiftyOptions"
                    android:paddingVertical="@dimen/_12sdp"
                    android:background="@drawable/background_sign_in"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/textOptions"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:fontFamily="@font/lato_bold"
                            android:text=" Bank Nifty Options"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text="Strike Price  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/optionsStrikePrice"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:text="Stop Loss  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/optionsStopLoss"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text="Target  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/optionsTarget"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/cardTwo"
                app:cardMaxElevation="@dimen/_12sdp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/tradeOptions"
                    android:background="@drawable/background_sign_in"
                    android:paddingVertical="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/textFutures"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:fontFamily="@font/lato_bold"
                            android:text=" Bank Nifty Futures"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text="Strike Price  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/futuresStrikePrice"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:text="Stop Loss  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/futuresStopLoss"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_button_login"
                                android:fontFamily="@font/lato_bold"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:text="Target  : "
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_9sdp" />
                            <TextView
                                android:id="@+id/futuresTarget"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:text="2234"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </TableLayout>
    </ScrollView>


</LinearLayout>